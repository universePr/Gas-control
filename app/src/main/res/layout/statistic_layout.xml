<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- we add graph view to display -->

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/cardview_square_size"
        android:layout_height="@dimen/cardview_square_size"
        app:cardCornerRadius="@dimen/cardview_radius_size"
        android:id="@+id/card_chart">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.anychart.AnyChartView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/hidden_v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hidden_layout_default"
            android:layout_gravity="bottom"
            android:background="@color/white"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/gas_name_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/needle"
            android:layout_margin="@dimen/margin_card"
            android:textSize="@dimen/font_size_gas_name"
            android:layout_gravity="start|left"
            android:text="~CO2" />
    </androidx.cardview.widget.CardView>
